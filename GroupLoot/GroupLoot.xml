<GuiXml>
  <Controls>
    <TopLevelControl name="GroupLootWindow" mouseEnabled="true" movable="true" clampedToScreen="true">
      <Dimensions x="400" y="80" />

      <OnMoveStart>GroupLootSettings:MoveStart()</OnMoveStart>
      <OnMoveStop>GroupLootSettings:MoveStop()</OnMoveStop>

      <Controls>
        <Backdrop name="$(parent)BG" inherits="ZO_DefaultBackdrop"/>
        <TextBuffer 
          name="$(parent)Buffer" 
          inheritAlpha="true" 
          font="ZoFontGameSmall" 
          linkEnabled="true" 
          maxHistoryLines="30"/>
      </Controls>

    </TopLevelControl>
  </Controls>
</GuiXml>